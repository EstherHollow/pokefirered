{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "variant_counts_label",
        "variant_parts_label",
        "variant_data"
    ],
    "properties": {
        "variant_counts_label": {
            "type": "string"
        },
        "variant_parts_label": {
            "type": "string"
        },
        "variant_data": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "index",
                    "species"
                ],
                "properties": {
                    "index": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "species": {
                        "type": "string"
                    },
                    "sprites": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "maxItems": 4,
                        "uniqueItems": true
                    },
                    "palettes": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "maxItems": 8,
                        "uniqueItems": true
                    },
                    "subpalettes": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "name",
                                "indexes"
                            ],
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "indexes": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer",
                                        "minimum": 0,
                                        "exclusiveMaximum": 16
                                    },
                                    "minContains": 1,
                                    "uniqueItems": true
                                }
                            }
                        },
                        "maxItems": 4,
                        "uniqueItems": true
                    }
                }
            }
        }
    }
}